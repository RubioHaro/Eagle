<%-- any content can be specified here e.g.: --%>
<%@page import="Usuarios.Usuario"%>
<%@ page pageEncoding="UTF-8" %>
<div id="PopWindowConfig" class="modal">
    <form class="modal-content animate" name="config" method="POST" action="RegistroCliente">                                        
        <div class="panel">
            <div class="panel-heading">
                Actualizar los datos
                <span onclick="ClickCerrarModal('PopWindowConfig')" class="close" title="Close Modal">&times;</span>
            </div>
            <div class="panel-body">    
                Datos del Represetante
                <div class="form-group has-feedback">
                    <input type="text" class="form-control"  name="Nombre" required value="<%out.println(User.getNombre()); %>"  placeholder="Nombre" id="Nombre"/>                    
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <input type="text" class="form-control" value="<%out.println(User.getApellidop());%>"  name="Paterno" required  placeholder="Apellido Paterno" id="Paterno"/>                    
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control" value="<%out.println(User.getApellidom());%>" name="Materno" required  placeholder="Apellido Materno" id="Materno"/>                    
                    </div>
                </div><BR>
                <div class="form-group has-feedback">                            
                    <input type="email" class="form-control"  value="<%out.println(User.getMail());%>" name="Correo" required placeholder="Correo" id="Correo"/>                    
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="password" class="form-control"  name="Pass" required  placeholder="Ingresa tu contraseÃ±a" id="Pass"/>                    
                        </div>
                    </div>
                </div>
                <div class="form-group">                                                        
                    <button class="btn btn-default center-block" onclick="return Validacion()" onsubmit="return Validacion()" type="submit" >Actualizar</button>
                </div> 
            </div>
        </div> 
    </form>
</div>
